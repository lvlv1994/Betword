<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" 
    >

    
    <TableLayout 
        android:layout_width="fill_parent"
        android:layout_height="80dp"       
        >                        
            <TextView 
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="填写赌博相关提示  刺激 啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊 "                
                android:id="@+id/txt_setBetText"
                />                            
    </TableLayout>
   
    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="55dp"
         >

        <TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="所选书目:"
                android:textSize="8pt" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="要你命3000"
                android:textSize="10pt" />
        </TableRow>
    </TableLayout>

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="55dp" >

        <TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="背诵时间"
                android:textSize="8pt" />

            <EditText
                android:id="@+id/txt_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="请填写时间" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="背诵量"
                android:textSize="8pt" />

            <EditText
                android:id="@+id/txt_betNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="背诵量" />
        </TableRow>
    </TableLayout>

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="55dp" >

        <TableRow>

            <TextView
                android:id="@+id/txt_compution"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="日单量: 得数"
                android:textSize="8pt" />
        </TableRow>
    </TableLayout>

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="55dp" >

        <TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="所押积分:"
                android:textSize="8pt" />

            <EditText
                android:id="@+id/txt_BetMoney"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="输入积分额度"
                android:textSize="8pt" />
        </TableRow>
    </TableLayout>

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="55dp" >

        <Button
            android:id="@+id/btn_yes"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="确认" />
      
    </TableLayout>

    <Button
        android:id="@+id/btn_invite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="邀请好友 " />

</LinearLayout>