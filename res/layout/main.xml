<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/studymain_bg"
    >
    <LinearLayout android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/choose"
    android:layout_centerHorizontal="true"
    android:layout_below="@+id/top_bar"
    android:layout_marginTop="20px"
    android:gravity="center"
    android:orientation="horizontal"
    android:id="@+id/pickBook1"
    >

    <Spinner
        android:id="@+id/pickBook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00000000" />
    
    </LinearLayout>
<LinearLayout
  android:layout_width="fill_parent"
  android:layout_marginLeft="50px"
  android:layout_marginRight="50px"
  android:layout_height="wrap_content"
  android:orientation="vertical"
  android:src="@drawable/main_panel"
  android:layout_centerHorizontal="true"
  android:layout_marginTop="20px"
  android:layout_below="@+id/pickBook1">
      
    <TextView  
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content" 
    android:textColor="#000000"
    android:id="@+id/bookinfo"
    android:text="something"
    android:paddingTop="10px"
    android:paddingBottom="10px"
    android:paddingLeft="60px"
    />
     <LinearLayout
  android:layout_width="fill_parent"
  android:layout_height="wrap_content"
  android:orientation="horizontal"
 
  >
  <TextView
  android:id="@+id/learn_text"
  android:layout_width="wrap_content" 
  android:layout_height="wrap_content"
  android:textColor="#000000"
  android:text="已学习0/0" 
    />
  
  <ProgressBar 
  style="?android:attr/progressBarStyleHorizontal"
  android:id="@+id/learn_progress"
  android:layout_width="fill_parent"
  android:layout_height="wrap_content" 
  />
  </LinearLayout>
  <LinearLayout
  android:layout_width="fill_parent"
  android:layout_height="wrap_content"
  android:orientation="horizontal"
  
  >
  <TextView
  android:id="@+id/review_text"
  android:layout_width="wrap_content" 
  android:layout_height="wrap_content"
  android:textColor="#000000"
  android:text="已复习0/0" 
    />
  
  <ProgressBar 
  style="?android:attr/progressBarStyleHorizontal"
  android:id="@+id/review_progress"
  android:layout_width="fill_parent"
  android:layout_height="wrap_content" 
  />
  </LinearLayout>
    
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/learn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:background="@drawable/main_study" >
        </Button>

        <Button
            android:id="@+id/review"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:background="@drawable/main_review_btn_normal" >
        </Button>

        <Button
            android:id="@+id/test"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:background="@drawable/main_test" >
        </Button>

        <Button
            android:id="@+id/attention"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:background="@drawable/main_attention" />
    </LinearLayout>

    <LinearLayout
  android:layout_width="fill_parent"
  android:layout_height="wrap_content"
  android:orientation="horizontal"
  android:layout_alignParentTop="true"
  android:id="@+id/top_bar" 
  android:gravity="right"
  >
  </LinearLayout>
</RelativeLayout>
